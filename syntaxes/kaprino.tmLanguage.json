{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "kaprino",
	"patterns": [
		{
            "include": "#comments"
        },
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#params"
		}
	],
	"repository": {
		"comments": {
            "patterns": [
                {
                    "name": "comment.line",
                    "match": "//.*"
                }
            ]
        },
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.kaprino",
					"match": "\\#\\b(if|otherwise|loop|exit|submit|require|print|read)\\b"
				},
				{
					"name": "keyword.control.kaprino",
					"match": "\\b(extern|and|or|not)\\b"
				},
				{
					"name": "storage.type.kaprino",
					"match": "\\#\\b(let|func|class)\\b"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.kaprino",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.kaprino",
					"match": "\\\\."
				}
			]
		},
		"params": {
            "patterns": [
				{
					"name": "variable.language",
					"match": "\\b(true|false)\\b"
				},
				{
                    "name": "variable.name",
                    "match": "[a-zA-Z][0-9a-zA-Z]*"
                },
                {
                    "name": "constant.numeric",
                    "match": "[0-9]+(\\.[0-9])*"
                }
            ]
        }
	},
	"scopeName": "source.kpr"
}